// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?    @unique
  password      String
  emailVerified DateTime?
  image         String?
  wishlist      Wishlist[]
}

model Categories {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  img         String?
  color       String?
  slug        String  @unique

  products Product[]
  createAt DateTime  @default(now())
}

model Product {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  img         String?
  price       Float?
  isFeatured  Boolean @default(false)
  options     Json[]

  catSlug  String
  category Categories @relation(fields: [catSlug], references: [slug])

  createAt DateTime @default(now())
}

model Menu {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  shortDescr   String
  longDescr    String?
  price        Float
  sellingPrice Float?
  image        String

  category String?
}

model Wishlist {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  user      User     @relation(fields: [userEmail], references: [email])
  userEmail String   @unique // To be used to filter favorites that belong to the customer
  menu      String[]
}

model Order {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createAt  DateTime @default(now())
  price     Float
  products  Json[]
  status    String
  intent_id String?  @unique
}
